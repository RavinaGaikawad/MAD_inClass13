<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="4dp"

        app:cardBackgroundColor="#ebebeb"
        app:cardElevation="6dp"
        app:contentPaddingTop="6dp"
        android:layout_margin="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_tripname"
            android:layout_width="221dp"
            android:layout_height="44dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toStartOf="@+id/bt_gotomap"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_cityname"
            android:layout_width="217dp"
            android:layout_height="45dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toStartOf="@+id/bt_addplace"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_tripname" />

        <Button
            android:id="@+id/bt_gotomap"
            android:layout_width="105dp"
            android:layout_height="43dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="28dp"
            android:text="@string/map"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_tripname"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/bt_addplace"
            android:layout_width="105dp"
            android:layout_height="43dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="28dp"
            android:text="@string/addplace"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_cityname"
            app:layout_constraintTop_toBottomOf="@+id/bt_gotomap" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
